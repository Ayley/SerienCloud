<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeriesCloud" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/violet</item>
        <item name="colorSecondaryVariant">@color/violet</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SeriesCloud.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/dark</item>
        <item name="android:backgroundTint">@color/dark</item>
    </style>

    <style name="Theme.SeriesCloud.MenuText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/dark</item>
    </style>
</resources>